<%= render "layouts/header" %>
<div class="container">
  <div class="row">
    <div class="card col-sm-12">
      <div class="card-body">
        <div class="card-title">
          <h1><i>Manajemen User</i></h1>
        </div>
        <div class="card-text">
          <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th>Username</th>
                <th>Password</th>
                <th width="10%">
                  <%= link_to :"Buat User Baru", new_user_path, class: "btn btn-block btn-success" %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.password %></td>
                  <td>
                    <%= link_to :Edit, edit_user_path(user), class: "btn btn-block btn-info" %>
                    <%= link_to 'Destroy', user_path(user), 
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-block btn-danger" %></td>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
