<%= render 'layouts/header' %>
<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="card-title">
        <h1>Daftar Artikel</h1>
      </div>
      <div class="card-text">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Dibuat / Diedit</th>
              <th>Judul</th>
              <th>Teks</th>
              <th colspan="3">
                <%= link_to 'Tambah', new_article_path, class: "btn btn-block btn-info" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.created_at %> /<br/> 
                  <%= article.updated_at %></td>
                <td><%= article.title %></td>
                <td><%= article.text %></td>
                <td><%= link_to 'Show', article_path(article), class: "btn btn-block btn-success" %>
                <%= link_to 'Edit', edit_article_path(article), class: "btn btn-block btn-warning" %>
                <%= link_to 'Destroy', article_path(article), 
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: "btn btn-block btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
